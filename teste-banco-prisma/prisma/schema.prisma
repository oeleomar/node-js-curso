// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Processo {
  id         String      @id @default(uuid())
  setor      String
  tipo       String
  titulo     String
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt()
  descricao  Descricao?
  video      String
  docs       Documentos?

  @@map("process")
}

model Descricao {
  id         String   @id @default(uuid())
  Processo   Processo @relation(fields: [processoId], references: [id])
  processoId String   @unique
  data       Data[]

  @@map("descricao")
}

model Data {
  id          String     @unique
  type        String
  text        String?
  level       Int?
  style       String?
  items       Items[]
  Descricao   Descricao? @relation(fields: [descricaoId], references: [id])
  descricaoId String?

  @@map("data")
}

model Items {
  idItems String   @id @default(uuid())
  Data    Data?    @relation(fields: [dataId], references: [id])
  dataId  String?
  content String[]

  @@map("items")
}

model Documentos {
  id         String             @id @default(uuid())
  titulo     String
  antigo     DocumentoAntigos[]
  processo   Processo?          @relation(fields: [processoId], references: [id])
  processoId String?            @unique
}

model DocumentoAntigos {
  id           String      @id @default(uuid())
  titulo       String
  Documentos   Documentos? @relation(fields: [documentosId], references: [id])
  documentosId String?
}
